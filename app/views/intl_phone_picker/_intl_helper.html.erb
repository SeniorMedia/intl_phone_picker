<%= phones_fields -%>
<% hidden_input_name ||= nil %>

<%= javascript_tag do -%>
  document.addEventListener('turbolinks:load', function() {
  var visible_input = $("input[type='tel'][name='<%= visible_input_name %>']");
  toggleIntlTelInput(visible_input);
  <% if hidden_input_name %>
  var hidden_input = $("input[type='hidden'][name='<%= hidden_input_name %>']");
  synchronizeVisibleHiddenFields(visible_input, hidden_input);
  <% end -%>
  });
<% end -%>
